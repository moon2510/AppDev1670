@model AppDevGCD0805.Models.Category



<h1>Create Category</h1>

<form asp-controller="Categories" asp-action="Create" method="post">
    <div class="form-group">
        <label>Name of category</label>
        <input type="text" class="form-control" placeholder="Input name" asp-for="Name">
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control" placeholder="Input description" asp-for="Description">
    </div>
    <button type="submit" class="btn btn-outline-success">Create</button>
    <center><a class="nav-link btn btn-outline-primary col-3 fas fa-reply" asp-controller="Categories" asp-action="Index">   Back to previous page</a></center>
</form>
