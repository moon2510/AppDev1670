@model AppDevGCD0805.Models.AssignTraineeCourse



<h1>Create Course</h1>
<form asp-controller="TrainingStaffs" asp-action="AssignTrainee" method="post">
  <input hidden asp-for="@Model.UserId" />
  <div class="form-group">
    <label>Trainee</label>
    <p>@ViewBag.User</p>
  </div>


  <div class="form-group">
    <label>Course</label>

    @Html.DropDownListFor(model => model.CourseId, ViewBag.CourseList as SelectList,
              "Select Course", new { @class = "form-control" })

  </div>

  <button type="submit" class="btn btn-outline-success">Create</button>

</form>
