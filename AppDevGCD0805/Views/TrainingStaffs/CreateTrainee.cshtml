@model AppDevGCD0805.Models.TraineeProfile




<h1>Create Trainee</h1>
@if (TempData["Danger"] != null)
{
    <div class="alert alert-danger alert-dismissable">
        <strong>@TempData["Danger"]</strong>
    </div>
}
<form asp-controller="TrainingStaffs" asp-action="CreateTrainee" method="post">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" placeholder="Input full name" asp-for="User.FullName">
        <span asp-validation-for="User.FullName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label>Email</label>
        <input required type="email" class="form-control" placeholder="Input Email"
               asp-for="User.Email">
        <span asp-validation-for="User.Email" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label>Password</label>
        <input required
               type="password" class="form-control" placeholder="Input Password" asp-for="User.PasswordHash" id="myInput">
        <br />
        <input type="checkbox" onclick="myFunction()">Show Password
    </div>
    <div class="form-group">
        <label>Age</label>
        <input type="text" class="form-control" placeholder="Input age" asp-for="User.Age">
    </div>

    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" placeholder="Input Address" asp-for="User.Address">
    </div>

    <div class="form-group">
        <label>Date of birth</label>
        <input type="date" class="form-control" placeholder="Input Date of birth" asp-for="DateOfBirth">
    </div>

    <div class="form-group">
        <label>Education</label>
        <input required type="text" class="form-control" placeholder="Input Education" asp-for="Education">
        <span asp-validation-for="Education" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-outline-success">Create</button>
    <center><a class="nav-link btn btn-outline-primary col-3 fas fa-reply" asp-controller="TrainingStaffs" asp-action="Index">   Back to previous page</a></center>
</form>


