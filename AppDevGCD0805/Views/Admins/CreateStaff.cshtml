@model AppDevGCD0805.Models.User




<h1>Create Training Staff</h1>
@if (TempData["Danger"] != null)
{
    <div class="alert alert-danger alert-dismissable">
        <strong>@TempData["Danger"]</strong>
    </div>
}
<form asp-controller="Admins" asp-action="CreateStaff" method="post">
    <div class="form-group">
        <label>Full Name</label>
        <input required type="text" class="form-control" placeholder="Input full name" asp-for="FullName">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input required type="email" class="form-control" placeholder="Input Email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input required type="password" class="form-control" placeholder="Input Password" asp-for="PasswordHash" id="myInput">
        <input type="checkbox" onclick="myFunction()">Show Password
    </div>

    <div class="form-group">
        <label>Age</label>
        <input type="text" class="form-control" placeholder="Input age" asp-for="Age">
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" placeholder="Input Address" asp-for="Address">
    </div>


    <button type="submit" class="btn btn-outline-success">Create</button>

</form>

