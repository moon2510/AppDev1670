@model AppDevGCD0805.Models.User




<h1>Create Training Staff</h1>

<form asp-controller="Admins" asp-action="CreateStaff" method="post">
  <div class="form-group">
    <label>Full Name</label>
    <input type="text" class="form-control" placeholder="Input full name" asp-for="FullName">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="text" class="form-control" placeholder="Input Email" asp-for="Email">
  </div>
  <div class="form-group">
    <label>UserName </label>
    <input type="text" class="form-control" placeholder="Input UserName" asp-for="UserName">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="text" class="form-control" placeholder="Input Password" asp-for="PasswordHash">
  </div>

  <div class="form-group">
    <label>Age</label>
    <input type="text" class="form-control" placeholder="Input age" asp-for="Age">
  </div>
  <div class="form-group">
    <label>Address</label>
    <input type="text" class="form-control" placeholder="Input Address" asp-for="Address">
  </div>


  <button type="submit" class="btn btn-outline-success">Create</button>
</form>
