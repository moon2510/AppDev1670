@model AppDevGCD0805.Models.User



<h1>Edit</h1>
@if (TempData["Danger"] != null)
{
    <div class="alert alert-danger alert-dismissable">
        <strong>@TempData["Danger"]</strong>
    </div>
}
<form asp-controller="Admins" asp-action="EditStaff" method="post">
    <div class="form-group">
        <label>Full Name</label>
        <input required type="text" class="form-control" placeholder="Input full name" asp-for="FullName">
        <span asp-validation-for="FullName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label>Age</label>
        <input type="text" class="form-control" placeholder="Input age" asp-for="Age">
    </div>

    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" placeholder="Input Address" asp-for="Address">
    </div>


    <button type="submit" class="btn btn-outline-info">Edit</button>
</form>

<center><a class="nav-link btn btn-outline-primary col-3 fas fa-reply" asp-controller="Admins" asp-action="ManageStaff">   Back to previous page</a></center>