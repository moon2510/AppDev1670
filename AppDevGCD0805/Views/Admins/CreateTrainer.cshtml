@model AppDevGCD0805.Models.TrainerProfile




<h1>Create Trainer</h1>

<form asp-controller="Admins" asp-action="CreateTrainer" method="post">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" placeholder="Input full name" asp-for="User.FullName">
    </div>
    <div class="form-group">
        <label>UserName </label>
        <input type="text" class="form-control" placeholder="Input UserName" asp-for="User.UserName">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" placeholder="Input Email" asp-for="User.Email">
    </div>
    <div class="form-group">
        <label>Age</label>
        <input type="text" class="form-control" placeholder="Input age" asp-for="User.Age">
    </div>

    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" placeholder="Input Address" asp-for="User.Address">
    </div>

    <div class="form-group">
        <label>Specialty</label>
        <input type="text" class="form-control" placeholder="Input Specialty" asp-for="Specialty">
    </div>

    <button type="submit" class="btn btn-outline-success">Create</button>
</form>
