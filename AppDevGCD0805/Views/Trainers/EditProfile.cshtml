@model AppDevGCD0805.Models.TrainerProfile


<h1>Edit</h1>
@if (TempData["Danger"] != null)
{
    <div class="alert alert-danger alert-dismissable">
        <strong>@TempData["Danger"]</strong>
    </div>
}
<form asp-controller="Trainers" asp-action="EditProfile" method="post">
    <div class="form-group">
        <label>Full Name</label>
        <input required type="text" class="form-control" placeholder="Input full name" asp-for="User.FullName">
        <span asp-validation-for="User.FullName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" placeholder="Input Address" asp-for="User.Address">
    </div>
    <div class="form-group">
        <label>Age</label>
        <input type="text" class="form-control" placeholder="Input age" asp-for="User.Age">
    </div>
    <div class="form-group">
        <label>Specialty</label>
        <input type="text" class="form-control" placeholder="Input specialty" asp-for="Specialty">
    </div>



    <button type="submit" class="btn btn-outline-info">Edit</button>
</form>